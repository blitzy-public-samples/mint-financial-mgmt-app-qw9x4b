NODE_ENV=development

# Server Configuration
PORT=3000
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/mint_replica
MONGODB_URI=mongodb://localhost:27017/mint_replica
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=1d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# External API Keys
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox
CREDIT_BUREAU_API_KEY=your_credit_bureau_api_key
INVESTMENT_DATA_API_KEY=your_investment_data_api_key

# Logging
LOG_LEVEL=debug

# Error Tracking
SENTRY_DSN=your_sentry_dsn_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Encryption
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data

# IMPORTANT: Review and set actual values for all environment variables before deployment
# Ensure that the actual .env file is added to .gitignore to prevent exposing sensitive information